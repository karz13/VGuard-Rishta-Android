<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_32"
        android:layout_marginVertical="@dimen/dp_8"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/base">

            <EditText
                android:id="@+id/etQrCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:enabled="false"
                android:hint="@string/qr_code"
                android:padding="@dimen/dp_6"
                android:singleLine="true"
                android:textSize="@dimen/sp_16"
                tools:ignore="Autofill,LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/base">

            <EditText
                android:id="@+id/etSku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:enabled="false"
                android:hint="@string/squ_details"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dp_6"

                android:singleLine="true"
                android:textSize="@dimen/sp_16"
                tools:ignore="Autofill,LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/llBillDetails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/base"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvBillDetails"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/bill_details_optional"
                android:padding="@dimen/dp_6"
                android:singleLine="true"
                android:textSize="@dimen/sp_16"
                tools:ignore="Autofill,LabelFor" />


            <ImageView
                android:id="@+id/ivBillDetails"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:padding="@dimen/dp_6"
                android:src="@drawable/ic_cam">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llWarranty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/base"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvWarranty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/warranty_photo"
                android:padding="@dimen/dp_6"
                android:singleLine="true"
                android:textSize="@dimen/sp_16"
                tools:ignore="Autofill,LabelFor" />


            <ImageView
                android:id="@+id/ivWarranty"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:padding="@dimen/dp_6"
                android:src="@drawable/ic_cam">

            </ImageView>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/base">

            <EditText
                android:id="@+id/etSellingPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/selling_price"
                android:inputType="numberDecimal"
                android:padding="@dimen/dp_6"
                android:singleLine="true"
                android:textSize="@dimen/sp_16"
                tools:ignore="Autofill,LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/llPurchaseDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/base"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPurchaseDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:fontFamily="@font/nunito"
                android:gravity="center|start"
                android:hint="@string/purchase_date"
                android:paddingStart="@dimen/dp_8"
                android:paddingTop="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:singleLine="true"
                android:textColor="@color/secondary_text" />

            <ImageView
                android:id="@+id/ivDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_8"
                android:contentDescription="@string/calendar_icon"
                android:src="@drawable/calendar" />

        </LinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/transparent_ripple"
            android:drawableEnd="@drawable/arrow"
            android:drawablePadding="-24dp"
            android:elevation="@dimen/dp_10"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="@string/add_customer_details"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:translationZ="@dimen/dp_6" />


    </LinearLayout>


</LinearLayout>