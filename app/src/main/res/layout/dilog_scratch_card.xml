<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/llScrach"
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_filled"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="end"
            android:src="@drawable/ic_close_2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivGiftWrap"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/ic_rewards_gift" />

        <TextView
            android:id="@+id/tvPointsWonMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_4"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="@string/you_won" />

        <TextView
            android:id="@+id/tvSchemePoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="@string/points" />

        <TextView
            android:id="@+id/tvCouponPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPointsMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="@string/points" />

        <TextView
            android:id="@+id/tvPointsMsg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="@string/points" />

        <TextView
            android:id="@+id/tvClubPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="@string/club_points"
            tools:visibility="gone" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/tvScanAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_40"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/dp_4"
                android:text="@string/click_here_to_sacn_more"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/registerProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_40"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/dp_4"
                android:text="Register Warranty"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>


    <com.tfl.vguardrishta.scratchCard.ScratchCard
        android:id="@+id/ivScratchCard"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_250"
        android:visibility="gone"
        app:scratchDrawable="@drawable/ic_scratch_card_greeting_2"
        app:scratchWidth="@dimen/dp_32" />

</RelativeLayout>