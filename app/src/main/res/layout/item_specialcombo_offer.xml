<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="9dp"
    card_view:cardUseCompatPadding="true"
    app:cardCornerRadius="50dp"
    android:layout_weight="1"
    android:outlineSpotShadowColor="@color/black"
    android:outlineAmbientShadowColor="@color/black"
    android:background="@drawable/rounded_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SchemeCardView"
        android:background="@drawable/rounded_card"
        android:orientation="vertical"


        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_32"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Combo Scheme"
        android:gravity="center"
        android:id="@+id/titleText"
        android:paddingHorizontal="@dimen/dp_4"
        android:layout_marginVertical="4px"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="@dimen/dp_24"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            android:showDividers="middle"
            android:id="@+id/scheme_table"
            android:divider="@color/black">


        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/Note1"
            android:textAlignment="viewStart"
            android:layout_marginTop="@dimen/dp_2"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="Complete 15 scans in any two of the above categories and earn 10% extra bonus."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/Note2"
            android:textAlignment="viewStart"
            android:layout_marginTop="@dimen/dp_2"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="Complete 15 scans in any 3 of the above categories
and earn 30% extra bonus."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/Note3"
            android:textAlignment="viewStart"
            android:layout_marginTop="@dimen/dp_2"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="Complete 15 scans in any 3 of the above categories
and earn 30% extra bonus."/>

<Button
    android:id="@+id/btnAction"
    android:layout_width="@dimen/dp_150"
    android:layout_height="wrap_content"
    android:background="@drawable/button_rounded"
    android:text="Scan"
    android:layout_marginBottom="10dp"
    android:textStyle="bold"
    android:layout_marginTop="@dimen/dp_4"
    android:textColor="@color/black"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>